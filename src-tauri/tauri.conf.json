{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "Fabric Mod Hub",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"open": true
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"minimize": true,
				"startDragging": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "nl.niekpeters.fabric-mod-hub",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"label": "main",
				"title": "Fabric Mod Hub",
				"fullscreen": false,
				"width": 1100,
				"height": 700,
				"resizable": false,
				"decorations": false,
				"transparent": true
			},
			{
				"label": "splashscreen",
				"url": "splashscreen",
				"fullscreen": false,
				"width": 1100,
				"height": 700,
				"resizable": false,
				"decorations": false,
				"transparent": true
			}
		],
		"macOSPrivateApi": true
	}
}
